{
  "name": "care-nodejs",
  "version": "1.0.0",
  "description": "C.A.R.E. Node.js components for CAN bridge, web dashboard and ROS 2 integration",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "bridge": "node care-can-bridge/index.js",
    "dashboard": "node care-dashboard/index.js",
    "api": "node care-api/index.js",
    "dev": "nodemon index.js",
    "test": "jest",
    "lint": "eslint .",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "docs": "jsdoc -c jsdoc.json",
    "docs:serve": "npm run docs && python3 -m http.server 8080 -d ../../docs/api/jsdoc"
  },
  "keywords": [
    "care",
    "radar",
    "can",
    "ros2",
    "safety",
    "robotics"
  ],
  "author": "CARE Project",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "lodash": "^4.17.21",
    "moment": "^2.29.4",
    "morgan": "^1.10.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@types/jest": "^30.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^7.2.1",
    "jest": "^29.7.0",
    "jsdoc": "^4.0.2",
    "docdash": "^2.0.2",
    "nodemon": "^3.0.1",
    "prettier": "^3.6.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
