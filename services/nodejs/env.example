# C.A.R.E. Node.js Environment Configuration

# Service Ports
PORT=3000                    # Web Dashboard port
API_PORT=3001               # API Server port

# CAN Configuration
CAN_INTERFACE=can0          # CAN interface name
CAN_BITRATE=500000          # CAN bitrate (bps)

# ROS 2 Configuration
ROS_DOMAIN_ID=0             # ROS 2 domain ID
ROS_NODE_NAME=care_can_bridge

# Dashboard Configuration
DASHBOARD_TITLE="C.A.R.E. Radar Dashboard"
DASHBOARD_REFRESH_RATE=100  # WebSocket refresh rate (ms)

# API Configuration
API_RATE_LIMIT=100          # Requests per minute
API_CORS_ORIGIN="*"         # CORS origin

# Data Storage
DATA_DIR=./data             # Data storage directory
LOG_LEVEL=info             # Log level (debug, info, warn, error)

# Security
JWT_SECRET=your-secret-key  # JWT secret for authentication
API_KEY=your-api-key       # API key for external access

# Performance
MAX_MEMORY_USAGE=512        # Max memory usage (MB)
GC_INTERVAL=30000          # Garbage collection interval (ms)
